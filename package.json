  "author": "Nilanjan Haldar",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb-memory-server": "^8.15.1",
    "mongoose": "^6.12.0",
    "morgan": "^1.10.0",
    "node-rest-client": "^3.1.1",
    "nodemailer": "^6.9.5",
    "nodemon": "^2.0.22",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "tailwindcss": "^3.3.3"
  },
  "directories": {
