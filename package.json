{
  "name": "crm-app",
  "version": "1.0.2",
  "description": "It is an app developed for resolving customer queries using backend libraries viz. express, bcrypt, jsonwebtoken, dotenv, mongoose, etc.",
  "main": "app.js",
  "scripts": {
    "test": "jest --testEnvironment=node --runInBand --detectOpenHandles --coverage ./tests",
    "build": "npm install bcrypt dotenv express jest jsonwebtoken mongodb-memory-server mongoose node-rest-client nodemailer nodemon morgan cors --save",
    "start": "node app.js",
    "dev": "nodemon app.js"
  },
  "keywords": [
    "nodejs",
    "bcrypt",
    "express",
    "dotenv",
    "jsonwebtoken",
    "mongoose",
    "nodemon",
    "morgan",
    "cors"
