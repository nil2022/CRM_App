{
  "name": "crm-app",
  "version": "1.0.2",
  "description": "It is an app developed for resolving customer queries using backend libraries viz. express, bcrypt, jsonwebtoken, dotenv, mongoose, etc.",
  "main": "app.js",
  "scripts": {
    "test": "jest --testEnvironment=node --runInBand --detectOpenHandles --coverage ./tests",
    "build": "npm install axios bcrypt cors dotenv express jest jsonwebtoken mongodb-memory-server mongoose morgan nodemon validator --save",
    "start": "node app.js",
    "dev": "nodemon app.js",
    "lint:fix": "eslint --fix ./*.js"
  },
  "keywords": [
    "nodejs",
    "bcrypt",
    "express",
    "dotenv",
    "jsonwebtoken",
    "mongoose",
    "nodemon",
    "morgan",
    "cors",
    "validator"
  ],
  "author": "Nilanjan Haldar",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.5.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb-memory-server": "^8.15.1",
    "mongoose": "^6.12.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.22",
    "validator": "^13.11.0"
  },
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nil2022/CRM_App.git"
  },
  "bugs": {
    "url": "https://github.com/nil2022/CRM_App/issues"
  },
  "homepage": "https://github.com/nil2022/CRM_App#readme",
  "devDependencies": {
    "eslint": "^8.50.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1"
  }
}
